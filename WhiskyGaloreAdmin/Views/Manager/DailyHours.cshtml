@model WhiskyGaloreAdmin.Models.DailyHours
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "DailyHours";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Daily staff hours</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Create", "Register", FormMethod.Post))
{
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Daily staff hours
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                    @Html.LabelFor(model => model.title, new { @class = "control-label col-lg-3" })
                                    @Html.EnumDropDownListFor(model => model.title)
                                </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.forename, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.forename, new { @class = "form-control  col-lg-9" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.fax, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.fax, new { @class = "form-control col-lg-9" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.firstLine, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.firstLine, new { @class = "form-control col-lg-9" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}